@model Rocky_Models.ApplicationType;
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Application Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        @Html.LabelFor(m => m.ApplicationName, "Name")
                    </div>
                    <div class="col-8">
                        @Html.TextBoxFor(m => m.ApplicationName, "", new { @class = "form-control", @readonly = true })
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

