@model IEnumerable<Rocky_Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="UpdateInsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Application Type</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.ProductName
                        </td>
                        <td>
                            @if (@obj.Category != null)
                            {
                                @obj.Category.CategoryName
                            }
                        </td>
                        <td>
                            @if (@obj.ApplicationType != null)
                            {
                                @obj.ApplicationType.ApplicationName
                            }
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Product" asp-action="UpdateInsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exists</p>
    }
</div>

