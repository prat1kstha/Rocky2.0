@model Rocky_Models.Product
@using Rocky_Utility

<form method="post" asp-action="DeletePost" enctype="multipart/form-data">
    <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        @Html.LabelFor(m => m.ProductName, "Name")
                    </div>
                    <div class="col-8">
                        @Html.TextBoxFor(m => m.ProductName, "", new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        @Html.LabelFor(m => m.Price, "Price")
                    </div>
                    <div class="col-8">
                        @Html.TextBoxFor(m => m.Price, new { @type = "number", @class = "form-control", @disabled = "disabled" })
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        @Html.LabelFor(m => m.Description, "Description")
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control summernote content-editable", @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        @Html.LabelFor(m => m.CategoryId, "Product Category")
                    </div>
                    <div class="col-8">
                        @Html.TextBoxFor(m => m.CategoryId, Model.Category.CategoryName, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        @Html.LabelFor(m => m.ApplicationTypeId, "Application Type Category")
                    </div>
                    <div class="col-8">
                        @Html.TextBoxFor(m => m.ApplicationTypeId, Model.ApplicationType.ApplicationName, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Image != null)
                {
                    <img src="@Constants.ImagePath@Model.Image" style="width:100%; border-radius:5px; border:1px solid black">
                }
            </div>
        </div>
    </div>
</form>

